{{#each notes}}
<div class="card card-body">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <form method="post" action="/notes/{{id}}?_method=DELETE" class="w-25 float-right">
        <a href="/notes/edit/{{id}}" class="btn btn-dark">Edit</a>

        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-danger" value="delete">
    </form>
</div>
{{else}}
    <p>No TED notes listed</p>
{{/each}}